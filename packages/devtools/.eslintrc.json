{
  "env": {
    "webextensions": true
  },
  "extends": ["plugin:@nx/react", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["**/*.ts", "**/*.tsx"],
            "packageDir": [".", "./packages/devtools"]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
